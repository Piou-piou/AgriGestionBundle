<nav class="nav-page">
    {% if navigation is iterable and navigation|length > 0 %}
        <ul>
            {% for i in navigation %}
                    <li>
                            <a href="{{ path(i.url) }}">
                                    <i class="fa {{ i.icon }}"></i>
                                    <span>{{ i.text }}</span>
                            </a>
                    </li>
            {% endfor %}
        </ul>
    {% endif %}
</nav>
