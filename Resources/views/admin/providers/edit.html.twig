{% extends "@RibsAdmin/base.html.twig" %}
{% form_theme form '@RibsAdmin/forms/template.html.twig' %}

{% block nav_page %}
    {% include "@AgriGestion/admin/top_nav.html.twig" %}
{% endblock %}

{% block body %}
    <div class="ribs-container-fluid">
        {{ form_start(form) }}
        <div class="top-links">
            <a href="{{ path('agrigestion_admin_provider_index') }}" class="ribs-button danger">Cancel</a>
            {{ form_widget(form.submit) }}
        </div>

        <div class="page-title">
            <span>Fournisseur</span>
            <h3>{% if provider.id %}Edition de {{ provider.name }}{% else %}Création{% endif %}</h3>
        </div>


        <div class="row">
            <div class="cxs-12">
                <div class="block">
                    <header>
                        <h5>Informations</h5>
                    </header>

                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.shortName) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.name) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.siret) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.iban) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.code) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.comment) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if provider.id %}
            {% if ribsadmin_acces_right.testRight("agrigestion@admin@providers@address@create") == true %}
                <div class="top-links">
                    <a href="{{ path('agrigestion_admin_provider_create') }}" class="ribs-button">Créer un fournisseur</a>
                </div>
                <div class="clear mb1-5"></div>
            {% endif %}

            <div class="row">
                <div class="cxs-12">
                    <div class="block">
                        <header>
                            <h5>Adresses du fournisseur</h5>
                        </header>

                        <table>
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Adresse</th>
                                    <th>Ville</th>
                                    <th>Pays</th>
                                    <th>Créé le</th>
                                    <th>Modifié le</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for adress in provider.providerAdresses %}
                                    <tr>
                                        <td>{{ adress.name }}</td>
                                        <td>{{ adress.adress }}</td>
                                        <td>{{ adress.city }}</td>
                                        <td>{{ adress.country }}</td>
                                        <td>{{ provider.createdAt is empty ? "" : provider.createdAt|date("d/m/Y H:i:s") }}</td>
                                        <td>{{ provider.updatedAt is empty ? "" : provider.updatedAt|date("d/m/Y H:i:s") }}</td>
                                        {% if ribsadmin_acces_right.testRight("agrigestion@admin@providers@address@edit") == true %}
                                            <td>
                                                <a href="{{ path('agrigestion_admin_provider_edit', {"id": provider.id}) }}">
                                                    Modifier
                                                </a>
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center">Aucune adresse trouvée pour ce fournisseur</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    {{ form_end(form) }}
{% endblock %}
