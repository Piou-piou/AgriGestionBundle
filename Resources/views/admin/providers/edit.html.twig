{% extends "@RibsAdmin/base.html.twig" %}
{% form_theme form '@RibsAdmin/forms/template.html.twig' %}

{% block nav_page %}
    {% include "@AgriGestion/admin/top_nav.html.twig" %}
{% endblock %}

{% block body %}
    <div class="ribs-container-fluid">
        {{ form_start(form) }}
        <div class="top-links">
            <a href="{{ path('agrigestion_admin_provider_index') }}" class="ribs-button danger">Cancel</a>
            {{ form_widget(form.submit) }}
        </div>

        <div class="page-title">
            <span>Fournisseur</span>
            <h3>{% if provider %}Edition de {{ provider.name }}{% else %}Cr√©ation{% endif %}</h3>
        </div>


        <div class="row">
            <div class="cxs-12">
                <div class="block">
                    <header>
                        <h5>Informations</h5>
                    </header>

                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.shortName) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.name) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.siret) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.iban) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.code) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.comment) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
