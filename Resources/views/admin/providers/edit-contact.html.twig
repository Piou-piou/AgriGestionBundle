{% extends "@RibsAdmin/base.html.twig" %}
{% form_theme form '@RibsAdmin/forms/template.html.twig' %}

{% block nav_page %}
    {% include "@AgriGestion/admin/top_nav.html.twig" %}
{% endblock %}

{% block body %}
    <div class="ribs-container-fluid">
        {{ form_start(form) }}
        <div class="top-links">
            <a href="{{ path('agrigestion_admin_provider_edit', {'id': provider_contact.providerId}) }}" class="ribs-button danger">Cancel</a>
            {{ form_widget(form.submit) }}
        </div>

        <div class="page-title">
            <span>Fournisseur</span>
            <h3>{% if provider_contact.id %}Edition de l'adresse {{ provider_contact.title }}{% else %}Cr√©ation d'un contact{% endif %}</h3>
        </div>


        <div class="row">
            <div class="cxs-12">
                <div class="block">
                    <header>
                        <h5>Informations</h5>
                    </header>

                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.lastname) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.role) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.phoneNumber) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.mobile) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.providerAddress) }}
                        </div>
                        <div class="cxs-12 cmd-6">
                            {{ form_row(form.comment) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
